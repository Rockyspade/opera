{{!< default}}

<section class="author" itemprop="author" itemscope itemtype="http://schema.org/Person">
    <h1 class="author-title" itemprop="name">Posts by {{#if author.website}}<a class="author-website" href="{{author.website}}" itemprop="url">{{/if}}<span class="author-name">{{author.name}}</span>{{#if author.website}}</a>{{/if}}</h1>

    {{#if author.bio}}<p class="author-bio" itemprop="description">{{author.bio}}</p>{{/if}}

    {{#if author.image}}<img alt="" class="author-image" itemprop="image" src="{{author.image}}">{{/if}}

    {{#if author.cover}}<img alt="" class="author-cover" src="{{author.cover}}">{{/if}}
</section>

{{> index}}