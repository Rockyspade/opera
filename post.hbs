{{!< default}}

{{#post}}
<article class="{{post_class}} post-full" id="id-{{id}}" itemscope itemtype="http://schema.org/BlogPosting">
    <header class="post-header">
        <h1 class="post-title">{{{title}}}</h1>

        <span class="post-meta">
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}" itemprop="datePublished">{{date format='MMMM D, YYYY'}}</time>

            {{#if tags}}<span class="post-tags" itemprop="keywords">{{tags}}</span>{{/if}}
        </span>
    </header>

    <div class="post-content" itemprop="articleBody">
    {{content}}
    </div>

    <footer class="post-footer">
        <section class="author" itemprop="author" itemscope itemtype="http://schema.org/Person">
            <h4 class="author-name" itemprop="name">{{#if author.website}}<a class="author-website" href="{{author.website}}" itemprop="url">{{/if}}{{author.name}}{{#if author.website}}</a>{{/if}}</h4>

            {{#if author.bio}}<p class="author-bio" itemprop="description">{{author.bio}}</p>{{/if}}

            {{#if author.image}}<img alt="" class="author-image" itemprop="image" src="{{author.image}}">{{/if}}

            {{#if author.cover}}<img alt="" class="author-cover" src="{{author.cover}}">{{/if}}
        </section>

        <section class="share">
            <h4>Share this post</h4>

            <a class="share-twitter" href="http://twitter.com/share?text={{title}}&url={{url absolute='true'}}"
                onclick="window.open(this.href, 'twitter-share', 'height=235,width=550'); return false"><span class="alt">Twitter</span></a>

            <a class="share-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute='true'}}"
                onclick="window.open(this.href, 'facebook-share','height=296,width=580'); return false"><span class="alt">Facebook</span></a>

            <a class="share-google-plus" href="https://plus.google.com/share?url={{url absolute='true'}}"
               onclick="window.open(this.href, 'google-plus-share', 'height=530,width=490'); return false"><span class="alt">Google+</span></a>
        </section>
    </footer>

    <!-- Disqus comments -->

    <section class="comments">
        <h4>Comments</h4>

        <div id="disqus_thread">
            <form class="comments-toggle">
                <input type="submit" value="View comments">
            </form>
        </div>

        <script>
        var disqus_identifier = '{{id}}';
        var disqus_url = '{{url absolute="true"}}';
        </script>

        <noscript>Please enable javascript to <a href="http://disqus.com/?ref_noscript" rel="nofollow">discus this page, powered by Disqus.</a></noscript>
    </section>
</article>
{{/post}}