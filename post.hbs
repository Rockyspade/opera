{{!< default}}

{{#post}}
<article class="{{post_class}}" id="id-{{id}}">
    <header class="post-header">
        <h1 class="post-title">{{{title}}}</h1>

        <span class="post-meta">
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format='DD MMMM YYYY'}}</time>

            {{#if tags}}<span class="post-tags">{{tags}}</span>{{/if}}
        </span>
    </header>

    <div class="post-content">
        {{content}}
    </div>

    <footer class="post-footer">
        <section class="author">
            <h4 class="author-name">{{#if author.website}}<a class="author-website" href="{{author.website}}">{{/if}}{{author.name}}{{#if author.website}}</a>{{/if}}</h4>

            {{#if author.bio}}<p class="author-bio">{{author.bio}}</p>{{/if}}

            {{#if author.image}}<img alt="" class="author-image" src="{{author.image}}">{{/if}}

            {{#if author.cover}}<img alt="" class="author-cover" src="{{author.cover}}">{{/if}}
        </section>

        <section class="share">
            <h4>Share this post</h4>

            <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><span class="alt">Twitter</span></a>

            <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><span class="alt">Facebook</span></a>

            <a href="https://plus.google.com/share?url={{url absolute="true"}}"
               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"><span class="alt">Google+</span></a>
        </section>
    </footer>

    <!-- Disqus comments -->

    <h4>Comments</h4>

    <div id="disqus_thread">
        <form onsubmit="my.loadDisqus();return false;">
            <input type="submit" value="View comments">
        </form>
    </div>

    <script>/* <![CDATA[ */
    var disqus_shortname = "metacotta";
    // provide the following in the template, if necessary
    // var disqus_url = "http://yourghostblogdomainname/";
    var disqus_identifier = '{{post.id}}';
    if (typeof my == "undefined") {
      var my = ({});
    }
    my.loadDisqus = function() {
        var dsq = document.createElement('script');
        dsq.type = 'text/javascript';
        dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    };
    /* ]]> */</script>

    <noscript>Please enable javascript to <a rel="nofollow" href="http://disqus.com/?ref_noscript">discus this page, powered by Disqus.</a></noscript>
</article>
{{/post}}