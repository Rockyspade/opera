{{#foreach posts}}
<article class="post {{#if featured}}post-featured{{/if}} {{#if @first}}post-first{{/if}} {{#if @last}}post-last{{/if}}" id="post-{{id}}">
    <header class="post-header">
        <h1 class="post-title"><a class="post-url" href="{{url}}">{{{title}}}</a></h1>

        <span class="post-meta">
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format='MMMM D, YYYY'}}</time>

            {{#if tags}}<span class="post-tags">{{tags}}</span>{{/if}}

            <a class="author-url" href="{{author.url}}">{{author}}</a>
        </span>

        {{#if image}}
        <img alt="" class="post-image" src="{{image}}">
        {{/if}}
    </header>

    <div class="post-content">
        <p>{{excerpt}} &hellip;</p>
    </div>
</article>
{{/foreach}}

{{pagination}}